<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mercadito.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image Source="dotnet_bot.png" HeightRequest="100" Aspect="AspectFit" />

            <Entry x:Name="EmailEntry" Placeholder="Correo electrónico" />
            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />

            <Button x:Name="Login" Text="Iniciar sesión" Clicked="Login_Clicked" HorizontalOptions="Fill" />

            <Button x:Name="Register" Text="Registrar" Clicked="Register_Clicked" HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
